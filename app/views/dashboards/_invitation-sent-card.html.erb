<div class="card-product">
  <%= link_to user_path(invitation.offer.volunteer) do %>
    <%= image_tag invitation.offer.volunteer.photo, alt: "volunteer avatar", class:"volunteer_avatar" %>
  <% end %>
  
  <div class="card-product-infos">
    <p><strong><%= invitation.offer.volunteer.first_name %> </strong> for <strong> <%= invitation.offer.talent.title %> </strong></p>
    <p>
      <% if invitation.title.length < 100 %>
        <%= invitation.title %>
      <% else %>
        <%= invitation.title[0..100] + "..." %>
      <% end %>
    </p>
  </div>
  
  <div class="invitation-date-location">
    <p><%= invitation.start_date %> - <%= invitation.end_date %> </p>
    <p> Location </p>
  </div>
  <div class="invitation-status">

    <% if invitation.status == "accepted" || invitation.status == "declined"  %>
      <button class="btn btn-flat btn-secondary m-2" disabled><%= invitation.status.capitalize %></button>  
      <%= form_for(invitation, data: { confirm: "Are you sure you want to close this help request?"}) do |fa| %>
        <%= fa.hidden_field :status, :value => "closed" %>
        <%= fa.submit "Close", class: "btn btn-flat btn-primary m-2" %>
      <% end %>
    <% else %>
      <button class="btn btn-flat btn-secondary m-2" disabled><%= invitation.status.capitalize %></button>
    <% end %>

  </div>
</div>
