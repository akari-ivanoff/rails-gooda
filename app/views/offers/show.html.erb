<div class="modal fade" id="addInvitationModal" tabindex="-1" role="dialog" aria-labelledby="addInvitationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addInvitationModalLabel">Create invitation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@invitation] do |f| %>
          <%= f.input :offer_id, as: :hidden %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.button :submit, class: "btn btn-primary w-100" %>
        <% end %>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> -->
    </div>
  </div>
</div>


<h2><%= @offer.volunteer.first_name %>'s offer</h2>
<p><%= @offer.talent.title %></p>
<p><%= @offer.comment %></p>
<hr>
<%= link_to "Edit the offer", edit_offer_path(@offer) %>
 <br>
<%= link_to "Delete the offer", offer_path(@offer),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
<hr>
<button type="button" class="btn btn-primary w-100 mb-3" data-toggle="modal" data-target="#addInvitationModal">
Create invitation
</button>
