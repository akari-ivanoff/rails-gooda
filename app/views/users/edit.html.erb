<div class="container">
  <br>
  <br>
  <br>

  <h1>Edit <%= @user.first_name %>'s profile</h1>

  <%= simple_form_for(@user) do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :location %>
    <%= f.input :bio %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>

</div>